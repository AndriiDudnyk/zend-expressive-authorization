{
    "name": "zendframework/zend-expressive-authorization",
    "description": "Authorization middleware for Expressive and PSR-7 applications",
    "homepage": "https://docs.zendframework.com/zend-expressive-authorization/",
    "type": "library",
    "license": "BSD-3-Clause",
    "keywords": [
        "cache",
        "http",
        "middleware",
        "zend-expressive",
        "psr-16"
    ],
    "config": {
        "sort-packages": true
    },
    "support": {
        "docs": "https://docs.zendframework.com/zend-expressive-authorization/",
        "issues": "https://github.com/ezimuel/zend-expressive-authorization/issues",
        "source": "https://github.com/ezimuel/zend-expressive-authorization",
        "slack": "https://zendframework-slack.herokuapp.com",
        "forum": "https://discourse.zendframework.com/c/questions/expressive"
    },
    "require": {
        "http-interop/http-middleware": "^0.4.1",
        "php": "^7.1",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0.1",
        "zendframework/zend-permissions-rbac": "^2.5.1",
        "zendframework/zend-diactoros": "^1.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.8",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-coding-standard": "~1.0.0",
        "zendframework/zend-expressive-router": "^2.1.0"
    },
    "conflict": {
        "container-interop/container-interop": "<1.2.0"
    },
    "autoload": {
        "psr-4": {
            "Zend\\Expressive\\Authorization\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZendTest\\Expressive\\Authorization\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "upload-coverage": "coveralls -v",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "license-check": "vendor/bin/docheader check src/ test/"
    }
}
